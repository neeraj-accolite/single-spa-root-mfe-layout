{
  "files": ["src/acc-root-config.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true, 
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "DOM.Iterable",
      "es5",
      "ESNext",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018"
    ]
  },
  "include": ["src"]
}